<!-- res/drawable/button_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF"/> <!-- Button background color -->
    <stroke
        android:width="2dp"/> <!-- Border width and color -->
    <corners android:radius="12dp"/> <!-- Border corner radius -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/> <!-- Padding inside the button -->
</shape>
